<!DOCTYPE html>
    <html lang="en">
        <head>
            <meta charset="utf-8"/>
            <title>News App</title>

            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
            <link href="css/style.css" rel="stylesheet">
        </head>
    <body>
        <nav class="navbar navbar-default navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/">HOME</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            <% if(form_error.length > 0){ %>
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-danger">
                            <strong>Attention!</strong>
                            <ul>
                                <% for(var i = 0; i < form_error.length; i++){ %>
                                    <li><%= form_error[i].msg %></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            <% } %>
            <div class="row">
                <div class="col-md-12">
                    <form action="/publication/save" method="post">
                        <div class="form-group">
                            <label for="title">Title:</label>
                            <input type="text" class="form-control" id="title" name="title">
                        </div>

                        <div class="form-group">
                            <label for="pwd">Abstract:</label>
                            <input type="text" class="form-control" id="abstract" name="abstract">
                        </div>
                        
                        <div class="form-group">
                            <label for="pwd">Author:</label>
                            <input type="text" class="form-control" id="Author" name="Author">
                        </div>

                        <div class="form-group">
                            <label for="pwd">Date:</label>
                            <input type="date" class="form-control" id="date" name="date">
                        </div>

                        <div class="form-group">
                            <label for="pwd">Content:</label>
                            <textarea class="form-control" id="content" name="content"></textarea>
                        </div>

                        <button type="submit" class="btn btn-default">Send</button>
                    </form>
                </div>
            </div>
        </div>
    
        <script src="js/jquery-2.2.1.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    
    </body>
</html>